
<section class="article-section , grid" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
 <div class="card_container" data-aos="fade-right" data-aos-offset="300" data-aos-easing="ease-in-sine">
        <div class="card_image">
          <img src=".{{ post.data.image }}" alt="{{ post.data.imageAlt }}" />
        </div>
        <div class="card_details">
          <div class="product_name">
            <h3 class="a-h3"><a href="{{ post.url }}" class="color">{{ post.data.title }}</a></h3>
            <div>
              <p class="a-p">
                {{post.data.description}}
              </p>
            </div>
          </div>
          <div class="a-details">
            <ul>
              <li>  <a href=".{{ post.url }}" >Read more</a></li>
              <li>{{post.data.author}}- {{ post.date | postDate }}</li>
            </ul>
          </div>
        </div>
      </div>
      </section>